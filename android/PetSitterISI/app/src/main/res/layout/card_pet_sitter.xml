                        android:background="@drawable/rounded_corner_green"
                        android:textColor="@color/white"
                        android:layout_marginLeft="10dp"
                        android:padding="10dp"/>

                </LinearLayout>

            </LinearLayout>



        </LinearLayout>

        <View
