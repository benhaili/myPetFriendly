<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

<!--    <include layout="@layout/activity_bottom_navigation_bar"/>-->


<LinearLayout
    android:id="@+id/card_liste_petsitter"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:padding="10dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@drawable/rounded_corner_grey_transparence"
        android:padding="10dp"
        android:orientation="vertical">

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:src="@drawable/rectangle_66"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_marginLeft="10dp">

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vanessa M."
                android:textColor="@color/white"
                android:textSize="25dp"/>

            <TextView
                android:layout_width="170dp"
                android:layout_height="50dp"
                android:text="Montreal, Qc, H4P"
                android:textColor="@color/white"
                android:layout_marginLeft="5dp"
                android:textSize="15dp"/>


        </LinearLayout>

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="11dp"
                android:src="@drawable/like" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:minHeight="55dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:layout_marginTop="10dp">

                    <ImageView
                        android:id="@+id/rate_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/black"
                        android:src="@drawable/icones_excellent" />


                    <TextView
                        android:id="@+id/description_niveau_pet_sitter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        android:text="Expert Sitter"
                        android:textColor="#FF6E40"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:minHeight="55dp">


                    <Button
                        android:id="@+id/button_profil"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="11.5dp"
                        android:layout_weight="2"
                        android:backgroundTint="@color/black"
                        android:minWidth="0dp"
                        android:text="@string/voir_profil_pet_sitter"
                        android:textColor="@color/white"
                        android:theme="@style/MyMaterialTheme"
                        android:gravity="center"/>


                    <Button
                        android:id="@+id/reservervation_liste_pet_sitter"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/green"
                        android:textSize="11.5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:minWidth="0dp"
                        android:contentDescription="@string/reservation"
                        android:text="@string/reservation"
                        android:textColor="@color/white"
                        android:theme="@style/MyMaterialTheme"
                        android:gravity="center"/>




                </LinearLayout>

            </LinearLayout>



        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@color/white"
            android:layout_marginTop="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:padding="10dp">
                <LinearLayout
                    android:id="@+id/pet_sitter_services_container"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:minHeight="100dp">
                </LinearLayout>


            </HorizontalScrollView>

        </LinearLayout>






    </LinearLayout>


</LinearLayout>

</LinearLayout>
