<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ItemMessageEnvoyer"
    android:orientation="vertical"
    android:gravity="right"
    android:paddingTop="8dp">

        <LinearLayout
            android:id="@+id/bulle_message_envoyer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_rectangle_discussion_grey"
                android:layout_marginTop="1dp"
                android:padding="5dp"
                android:minWidth="35dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_message_body_envoyer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:maxWidth="200dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="6dp"
                    android:text="re"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    />

            </LinearLayout>

            <TextView
                android:id="@+id/text_message_time_envoyer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:text="11:40"
                android:textColor="#777777"
                android:textSize="10sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/text_message_body_envoyer"
                app:layout_constraintLeft_toRightOf="@+id/text_message_body_envoyer"
                />

            <ImageView
                android:id="@+id/image_message_lu"
                android:layout_width="9dp"
                android:layout_height="11dp"
                android:background="@drawable/icone_message_lu"
                android:layout_gravity="bottom"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="2dp"
                app:layout_constraintBottom_toBottomOf="@+id/text_message_time_envoyer"
                app:layout_constraintLeft_toRightOf="@+id/text_message_time_envoyer"
                />


        </LinearLayout>

    </LinearLayout>




