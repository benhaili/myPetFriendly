<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ItemMessageEnvoyer"
    android:orientation="vertical"
    android:gravity="right"
    android:paddingTop="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_rectangle_discussion_grey"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/text_message_body_envoyer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dp"
                android:maxWidth="240dp"
                android:padding="8dp"
                android:text="hello, hello!"
                android:textColor="@color/black"
                android:textStyle="bold"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/text_message_time_envoyer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginTop="2dp"
                android:layout_marginRight="2dp"
                android:text="11:40"
                android:textSize="9sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/text_message_body"
                app:layout_constraintRight_toLeftOf="@+id/text_message_body" />

            <ImageView
                android:id="@+id/image_message_lu"
                android:layout_width="10dp"
                android:layout_height="14dp"
                android:layout_marginBottom="0.9dp"
                android:background="@drawable/icone_message_lu"
                android:layout_gravity="bottom"
                android:layout_marginRight="8dp"
                />


        </LinearLayout>

    </LinearLayout>

