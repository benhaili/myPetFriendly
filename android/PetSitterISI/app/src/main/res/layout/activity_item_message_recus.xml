<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="4dp"
    android:gravity="left"
    tools:context=".ItemMessageRecus">


    <ImageView
        android:id="@+id/image_message_profile"
        android:layout_width="25dp"
        android:layout_height="25dp"

        android:layout_marginLeft="8dp"
         />

    <TextView
        android:id="@+id/text_message_name_recus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:text="John Doe"
        android:textSize="12sp"
        app:layout_constraintLeft_toRightOf="@+id/image_message_profile"
        app:layout_constraintTop_toTopOf="parent" />



    <LinearLayout
        android:id="@+id/bulle_message_recus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:orientation="horizontal">



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_rectangle_discussion_blue"
        android:orientation="horizontal">


    <TextView
        android:id="@+id/text_message_body_recu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="4dp"
        android:layout_gravity="center_horizontal"
        android:maxWidth="240dp"
        android:padding="8dp"
        android:text="hi man, how are you?"
        android:textColor="#ffffff"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/image_message_profile"
        app:layout_constraintTop_toBottomOf="@+id/text_message_name" />


        <TextView
            android:id="@+id/text_message_time_recus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginTop="2dp"
            android:layout_marginRight="16dp"
            android:text="11:40"
            android:textAlignment="viewStart"
            android:textColor="#B5CACACA"
            android:textSize="9sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/text_message_body"
            app:layout_constraintLeft_toRightOf="@+id/text_message_body" />

    </LinearLayout>

</LinearLayout>













</LinearLayout>